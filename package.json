{
  "name": "slapdash",
  "version": "0.2.0",
  "description": "Slapdash is a lightweight utility JavaScript utility belt, inspired heavily by lodash",
  "main": "index.js",
  "directories": {
    "test": "test",
    "lib": "lib"
  },
  "devDependencies": {
    "browserify": "^13.0.0",
    "karma": "^0.13.22",
    "karma-browserify": "^5.0.4",
    "karma-chrome-launcher": "^0.2.3",
    "karma-expect": "^1.1.2",
    "karma-firefox-launcher": "^0.1.7",
    "karma-mocha": "^0.2.2",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-sinon-ie": "^2.0.0-rc10",
    "karma-sourcemap-loader": "^0.3.7",
    "mocha": "^2.4.5",
    "phantomjs-prebuilt": "^2.1.7",
    "sinon": "^1.17.3",
    "standard": "^6.0.8",
    "watchify": "^3.7.0"
  },
  "scripts": {
    "lint": "./node_modules/.bin/standard ./lib",
    "test-js": "./node_modules/.bin/karma start --single-run",
